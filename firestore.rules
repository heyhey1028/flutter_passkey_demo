rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // ログインユーザーのみ読み取り可能
      allow read: if request.auth != null;
      
      // ログインユーザーかつ、自分のドキュメントのみ書き込み可能
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // デフォルトですべてのアクセスを拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 